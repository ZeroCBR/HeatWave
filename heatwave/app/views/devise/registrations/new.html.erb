<h2>Sign up</h2>

<p>
Already have an account?
<%= link_to "Sign in!", new_session_path(resource_name) %>
</p>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             builder: UserFormBuilder) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", style:"width:30%" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", style:"width:30%" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", style:"width:30%" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class:"form-control", style:"width:30%" %>
  </div>
  <div class="form-group">
    <%= f.label :message_type %><br>
    <%= f.select(:message_type,
                 [['SMS', 'phone'],
                  ['Email', 'email'],
                  ['No Messages', 'unsubscribed']], {:prompt=>'Select your nearest weather station'}, {:class=>'form-control', :style=>"width:30%"}) %>
  </div>
  <div class="form-group">
    <%= f.label :location_id %><br>
    <%= f.select(:location_id,
                 @locations.map{ |l| [l.name, l.id] },
                 {:prompt=> 'Select your nearest weather station'}, {:class=>"form-control", :style=>"width:30%" })%>
  </div>

  <div class="field">
    <%= f.label :f_name %><br />
    <%= f.text_field :f_name, class:"form-control", style:"width:30%" %>
  </div>
  <div class="field">
    <%= f.label :l_name %><br />
    <%= f.text_field :l_name, class:"form-control", style:"width:30%" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br>
    <%= f.text_field :gender, class:"form-control", style:"width:10%" %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age, class:"form-control", style:"width:10%" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
