<h1>Listing Rules</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Activated</th>
      <th>Delta</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.activated %></td>
        <td><%= rule.delta %></td>
        <td><%= rule.duration %></td>
        <td><%= link_to 'Show More', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', :back %> |
<%= link_to 'New Rule', new_rule_path %>
