<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Admin?</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Age</th>
      <th>Prefered message type</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.f_name %></td>
        <td><%= user.l_name %></td>
        <td><%= user.admin_access %></td>
        <td><%= user.gender %></td>
        <td><%= user.phone %></td>
        <td><%= user.age %></td>
        <td><%= user.message_type %></td>
        <td><%= user.location.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Deregister', user, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

